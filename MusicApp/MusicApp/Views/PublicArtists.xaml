<UserControl x:Class="MusicApp.Views.PublicArtists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicApp.Views"
             mc:Ignorable="d" Height="390" Width="450">
    <Grid>
        <ListView Initialized="ListView_Initialized" Name="PublicArtistsView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=Name}" Width="100"></GridViewColumn>
                    <GridViewColumn Header="website" DisplayMemberBinding="{Binding Path=WebSite}" Width="100"  ></GridViewColumn>
                    <GridViewColumn Header="JoinDate" DisplayMemberBinding="{Binding Path=JoinDate}" Width="100"  ></GridViewColumn>
                    <GridViewColumn Header="shorturl" DisplayMemberBinding="{Binding Path=shorturl}" Width="100"  ></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
